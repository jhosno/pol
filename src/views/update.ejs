 <!DOCTYPE html>
 <html lang="en">

 <head>
     <% include partials/header %>
     <title>Polimnia - New record</title>
 </head>

 <body>
     <% include partials/navigation %>

     <div class="container p-4">

         <div class="card ">
             <div class="card-body">


                 <% record.forEach(record => { %>

                 <h2 class="card-title"><%= record.date%> a las <%= record.time%>hrs</h2>


                 <form action="/update/<%=record.id%> " method="POST" class=" card-body">

                     <div class="form-group">
                         <label for="monotony">Do you have more than 20min of monotony?</label>

                         <div class="form-check">
                             <input class="form-check-input" type="radio" name="monotony" id="monotony-true"
                                 value="false" checked>
                             <label class="form-check-label" for="monotony-false">
                                 Nop, I feel good!
                             </label>
                         </div>
                         <div class="form-check">
                                <input class="form-check-input" type="radio" name="monotony" id="monotony-true"
                                    value="true" >
                                <label class="form-check-label" for="monotony-true">
                                    Yep
                                </label>
                            </div>

                     </div>
                     <div class="form-group">
                         <label for="quote">Write a good thing here</label>
                         <input type="text" name="quote" id="quote" class="form-control" required
                             value='<%= record.quote%>'>
                     </div>
                     <input type="submit" value="Update" class="btn btn-info">
                 </form>
                 <%})%>
             </div>

         </div>

     </div>

     <style>
         card {
             padding: 5 px;
         }
     </style>
 </body>

 </html>